<Window x:Class="TcpIpChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpIpChat"
        mc:Ignorable="d"
      Title="Вход в сетевой чат" Height="320" Width="450" MinHeight="320" MinWidth="450" Background="#FF1F1F1F">
    <StackPanel VerticalAlignment="Center" Margin="5">
        <Label Content="Добро пожаловать в сетевой чат" Style="{StaticResource  HeaderText}" />
        <Label Content="Имя пользователя"/>
        <TextBox x:Name="NameTextBox"/>
        <Button x:Name="NewChatButton" Content="Я хочу создать новый чат" Click="NewChatButton_Click" />
        <Label Content="IP адрес чата"/>
        <TextBox x:Name="IPTextBox"/>
        <Button x:Name="ConnectButton" Content="Я хочу подключиться" Click="ConnectButton_Click" />
    </StackPanel>
</Window>
